<h1>Workout Tracker</h1>
 <h2>Enter text below in the given format to add a new excerise.</h2>
   <form method="get" action="/insert">
    <fieldset>
     <label>Name:</label>
	 <input type="text" name="a" required />
	 <br />
	 <label>Repition:</label>
	 <input type="number" name="b"/>
	 <br />
	 <label>Weight:</label>
	 <input type="number" name="c"/>
	 <br />
	 <label>Date:</label>
	 <input type="date" name="d"/>
	 <br />
	 <label>Lbs:</label>
	 <input type="radio" name="e" value="1" /><label>Pound</label>
     <input type="radio" name="e" value="0" /><label>Kilos</label>
	 <br />
	 <input type="submit" id="workSubmit">
    </fieldset>
</form>

<br />
<table id="chart">
 <thead>
	 <tr>
      <th>Name</th>
      <th>Reps</th>
	  <th>Weight</th>
	  <th>Date</th>
	  <th>Lbs</th>
	  <th>Edit</th>
	  <th>Delete</th>
	  </tr>
 </thead>
 <tbody>
    {{#each results}}     
      <tr>
       <td>{{this.name}}</td>
       <td>{{this.reps}}</td>
       <td>{{this.weight}}</td>                            
       <td>{{this.date}}</td>
       <td>{{this.lbs}}</td>
        
      <td>
	 <form id={{this.id}} method="get" action="/update" style="display:none">
       <input type="hidden" name="id" value={{this.id}} />
       <label>Name:
       <input type="text" name="name" value={{this.name}} />
       </label><br>
       <label>Reps:
       <input type="number" name="reps" value={{this.reps}} min="0" />
       </label><br>
       <label>Weight:
       <input type="number" name="weight" value={{this.weight}} min="0" />
       </label><br>
       <label>Date:
       <input type="date" name="date" value={{this.date}}/>
       </label><br>
       <label>Lbs:
       <input type="number" name="lbs" value=({{this.lbs}}) min="0" max="1"/>
       </label><br>
       <button type="submit" name="button1">submit</button><br>
     </form>
   	   <button type="button" onclick="editButton({{this.id}})">edit</button>
       <script>document.getElementById({{this.id}}.style.display="none"></script>
	  </td>
         
      <td> 
	   <form method="get" action="/delete">
        <input type="hidden" name="id" value={{this.id}} />
        <button type="submit" name="button2">delete</button>
       </form>
      </td>
     </tr>
    {{/each}}	
 </tbody>
</table>



